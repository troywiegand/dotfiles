#!/bin/bash

ADDRESS=$(ip address | grep "inet " | grep "wlp2s0" | awk '{print $2}')

SSID=$(iwgetid -r)


if [ -z "$ADDRESS" ]; then
    echo -n "якй"
else
    # WIFI=$(nmcli | grep connected | cut -c 22-)
    # BARS=$(nmcli dev wifi | grep $WIFI | cut -c 54-65)
    # echo -n $ADDRESS $BARS
    echo -n $SSID яки $ADDRESS
fi
